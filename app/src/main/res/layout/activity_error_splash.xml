<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:background="@drawable/homebg"
    android:layout_width="match_parent">


    <ImageView
        android:layout_width="@dimen/image_view_layout_width"
        android:layout_height="@dimen/image_view_layout_height"
        android:layout_centerInParent="true"
        android:contentDescription="@string/app_name"
        android:src="@drawable/logo" />

    <TextView
        android:visibility="gone"
        android:id="@+id/continueBtn"
        android:layout_marginBottom="@dimen/text_view_layout_marginBottom"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingLeft="@dimen/text_view_padding_left"
        android:paddingRight="@dimen/text_view_padding_right"
        android:background="@drawable/terms_accept_btn"
        android:textSize="20sp"
        android:textColor="@color/White"
        android:text="Continue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>