<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    android:orientation="vertical"
    android:id="@+id/LL_register">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_"
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_bar_size"
        app:popupTheme="@style/AppTheme.PopupOverlay" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RadioGroup
            android:id="@+id/radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:padding="4dp">


            <RadioButton
                android:id="@+id/radioMale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/colorBlack"
                android:checked="true"
                android:text="Person"
                android:textColor="@color/colorBlack" />

            <RadioButton
                android:id="@+id/radioFemale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:buttonTint="@color/colorBlack"
                android:text="Organization"
                android:textColor="@color/colorBlack" />

        </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="108.00dp"
            android:layout_marginRight="36.00dp"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/tv_firstname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="108.00dp"
                    android:gravity="center"
                    android:text="First Name"

                    android:textColor="@color/colorBlack"
                    android:textSize="14sp"
                    android:textStyle="bold">


                </TextView>
                <TextView
                    android:id="@+id/tv_orgName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="72.00dp"
                    android:gravity="center"
                    android:visibility="gone"
                    android:text="Organization Name"
                    android:textColor="@color/colorBlack"
                    android:textSize="14sp"
                    android:textStyle="bold">


                </TextView>

                <TextView
                    android:id="@+id/tv_middleName"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:gravity="center"

                    android:text="Middle Name"
                    android:textColor="@color/colorBlack"
                    android:textSize="14sp"
                    android:textStyle="bold">


                </TextView>

                <TextView
                    android:id="@+id/tv_orgType"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:gravity="center"
                    android:visibility="gone"
                    android:text="Organization Type"
                    android:textColor="@color/colorBlack"
                    android:textSize="14sp"
                    android:textStyle="bold">


                </TextView>

                <TextView
                    android:id="@+id/tv_lastname"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:gravity="center"

                    android:text="Last Name"
                    android:textColor="@color/colorBlack"
                    android:textSize="14sp"
                    android:textStyle="bold">


                </TextView>

                <TextView
                    android:id="@+id/tv_emailid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/_35sdp"

                    android:text="Email Address"
                    android:textColor="@color/colorBlack"
                    android:textSize="14sp"
                    android:textStyle="bold">


                </TextView>

                <TextView
                    android:id="@+id/tv_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_35sdp"
                    android:gravity="center"
                    android:text="Password"
                    android:textColor="@color/colorBlack"
                    android:textSize="14sp"
                    android:textStyle="bold">


                </TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:orientation="vertical">
                <EditText
                    android:id="@+id/edt_firstname"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="30sp"
                    android:background="@drawable/editext_squarebg"
                    android:gravity="left"
                 />

                <EditText
                    android:id="@+id/edt_orgname"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:visibility="gone"
                    android:layout_marginTop="30sp"
                    android:background="@drawable/editext_squarebg"
                    android:gravity="left"
                    />
                <EditText
                    android:id="@+id/edt_middlename"

                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="30sp"
                    android:background="@drawable/editext_squarebg"
                    android:gravity="left"
                    />
                <EditText
                    android:id="@+id/edt_orgtype"

                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="30sp"
                    android:background="@drawable/editext_squarebg"
                    android:gravity="left"
                    android:visibility="gone"
                    />
                <EditText
                    android:id="@+id/edt_lastname"

                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="30sp"
                    android:background="@drawable/editext_squarebg"
                    android:gravity="left"
                    />
                <EditText
                    android:id="@+id/edt_emailaddress"

                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="30sp"
                    android:background="@drawable/editext_squarebg"
                    android:gravity="left"
                    />
                <EditText
                    android:id="@+id/edt_password"
android:inputType="textPassword"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="30sp"
                    android:background="@drawable/editext_squarebg"
                    android:gravity="left"
                    />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_50sdp"
            android:orientation="horizontal"

            android:weightSum="1">

            <Button
                android:id="@+id/btn_signin"
                android:text="Sign In"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/_50sdp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="0.5"
                android:background="@drawable/roundedblack_transparent_btn"
                android:backgroundTint="@color/light_gray1"

                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_10sdp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ttttttttttttt"
                android:visibility="invisible">

            </TextView>

            <Button
                android:id="@+id/btn_createprofile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginBottom="10dp"
                android:onClick="clickCreateProfile"

                android:layout_weight="0.5"
                android:background="@drawable/roundedblack_transparent_btn"
                android:text="Create Account"
                android:textColor="@color/White"
                android:textSize="@dimen/_10sdp" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>
