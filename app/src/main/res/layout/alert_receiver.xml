<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/homebg">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/setBg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="9dp">

        </LinearLayout>
       <!-- <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@drawable/gradationlightreddown"
            android:layout_marginTop="52dp"
            android:alpha="0.2"/>-->
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/titlereceiver"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="@color/transparent"
        android:orientation="horizontal">
        <RelativeLayout
            android:id="@+id/titrelback"
            android:layout_width="52dp"
            android:layout_height="52dp">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:alpha="0.9"
                android:src="@drawable/ic_arrow_left_24dp"
                android:background="@color/transparent"
                android:layout_centerInParent="true"/>
            <ImageButton
                android:id="@+id/titrecrecback"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:background="@color/transparent"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <au.com.carmina.radarviewscan.CircularTextView
                android:id="@+id/rfab"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text=""
                android:textSize="17sp"
                android:layout_centerInParent="true"
                android:layout_margin="5dp"
                android:textAlignment="center"
                android:gravity="center"
                android:elevation="10sp"
                android:textStyle="bold"
                android:padding="2dp"/>
            <TextView
                android:id="@+id/rusername"
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="18sp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:textColor="@android:color/white" />
            <TextView
                android:id="@+id/topbarTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/receiver_ready"
                android:textAlignment="center"
                android:textSize="17sp"
                android:layout_gravity="center"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:textColor="@android:color/white" />
            <!--<Button
                android:id="@id/send_config"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="send"
                android:onClick="senHostspotConfigOverBluetooth"
                />-->
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="102dp"
        android:orientation="vertical">
        <!--<TextView
            android:id="@+id/rusername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textAlignment="center"
            android:textSize="18sp"
            android:textColor="@android:color/white" />-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/connect_status"
            android:layout_gravity="center_horizontal"
            android:text="@string/receiver_searching"
            android:textAlignment="center"
            android:textSize="17sp"
            android:textColor="@color/whitealpha90"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/after_connect_view"
            android:visibility="gone"
            android:layout_marginTop="30dp">
            <au.com.carmina.radarviewscan.CircularTextView
                android:id="@+id/connectedSender"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="N"
                android:textSize="25sp"
                android:layout_centerHorizontal="true"
                android:layout_margin="4dp"
                android:textAlignment="center"
                android:gravity="center"
                android:elevation="21sp"
                android:padding="2dp"/>
            <TextView
                android:id="@+id/connectedSenderName"
                android:layout_below="@id/connectedSender"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:text="SENDER" />
            <com.wang.avi.AVLoadingIndicatorView
                android:layout_marginTop="100dp"
                android:layout_below="@id/connectedSenderName"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:indicatorName="BallGridPulseIndicator" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/before_connect_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
            <!--<com.cinestaan.offline.ui.radarviewscan.RippleView
                android:id="@+id/cntrecvrpplv"
                android:layout_width="match_parent"
                android:layout_height="340dp"
                android:layout_gravity="center" />-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_below="@id/cntrecvrpplv"
                android:gravity="center_horizontal"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="20dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/qrCodeButton"
                    android:padding="5dp">
                    <ImageView
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:src="@drawable/qr_icon"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/connectinfo"
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_marginLeft="5dp"
                        android:textSize="15sp"
                        android:lineSpacingExtra="6dp"
                        android:layout_gravity="center_vertical"
                        android:textColor="@android:color/white"
                        android:text="@string/qr_info" />
                </LinearLayout>
            </LinearLayout>
            <au.com.carmina.radarviewscan.ReceiverScanView
                android:id="@+id/cntrecvrpplv"
                android:layout_width="340dp"
                android:layout_height="340dp"
                android:layout_centerHorizontal="true"/>




            <au.com.carmina.radarviewscan.RandomFabView
                android:id="@+id/random_imgviewrec"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_centerInParent="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
